{
  "name": "pms_web_backend",
  "version": "1.0.0",
  "main": "build/main/server.js",
  "typings": "build/main/server.d.ts",
  "repository": "",
  "author": "Ratul1997 <ratulbhowmick66@gmail.com>",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "build": "tsc --build",
    "start": "node src/server.js",
    "start:dev": "nodemon -e ts -w ./src -x npm run watch:serve",
    "start:prod": "node --loader ts-node/esm src/server.ts",
    "watch:serve": "node --loader ts-node/esm src/server.ts",
    "docker:prod:build": "docker compose -f docker-compose.yml -f docker-compose.prod.yml up -d --build",
    "docker:prod:stop": "docker compose -f docker-compose.yml -f docker-compose.prod.yml down",
    "docker:dev:build": "docker compose -f docker-compose.yml -f docker-compose.dev.yml up -d --build",
    "docker:dev:stop": "docker compose -f docker-compose.yml -f docker-compose.dev.yml down"
  },
  "engines": {
    "node": ">= 14.x"
  },
  "dependencies": {
    "@prisma/client": "^5.10.2",
    "@types/express": "^4.17.15",
    "@types/node": "^18.11.18",
    "@types/nodemailer": "^6.4.7",
    "@types/validator": "^13.7.10",
    "axios": "^1.3.1",
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.1",
    "cors": "^2.8.5",
    "dayjs": "^1.11.7",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^6.14.2",
    "helmet": "^6.0.1",
    "http-status": "^1.6.2",
    "joi": "^17.7.0",
    "jsonwebtoken": "^9.0.0",
    "mailer": "^0.6.7",
    "mysql2": "^3.0.1",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.28.0",
    "sequelize-typescript": "^2.1.5",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.24",
    "typescript": "^4.9.4",
    "uuid": "^9.0.0",
    "winston": "^3.8.2",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "nodemon": "^2.0.20",
    "npm-run-all": "^4.1.5",
    "prisma": "^5.10.2",
    "sequelize-cli": "^6.5.2"
  }
}
